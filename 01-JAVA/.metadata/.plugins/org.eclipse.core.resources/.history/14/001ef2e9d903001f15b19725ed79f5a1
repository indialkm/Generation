package exercicios;

import java.util.LinkedList;
import java.util.Queue;
import java.util.Scanner;

public class filaLista01 {
	public static void main(String[] args) {
		
		Queue<String> fila = new LinkedList<String>();
		Scanner leia = new Scanner(System.in);
		int menu = 1;
		
		do {
			
			System.out.println("Olá! Digite a opção\n|1|Adicionar um novo Cliente na fila.\n|2|Listar todos os Clientes na fila\n!3!Chamar(retirar) uma pessoa da fila\n|0|O programa deve ser finalizado\n");
			menu = leia.nextInt();
			leia.nextLine();
			
			switch(menu) {
			case 0:
				break;
			case 1:	
				System.out.println("Adicione um nome: \n");
				fila.add(leia.nextLine());
				System.out.println();
				System.out.println("------------------------------------------------------------");
				System.out.println();
				break;
			case 2:
				break;
			case 3:
				break;
			default:
				break;
			}
			System.out.println();
			System.out.println("------------------------------------------------------------");
			System.out.println();
		}while(menu != 0);
		
		
	}

}
