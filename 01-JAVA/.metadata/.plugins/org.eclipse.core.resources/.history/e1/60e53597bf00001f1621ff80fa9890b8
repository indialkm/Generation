package listaCondicionais;

import java.util.Scanner;

public class DiagramaAnimais4 {
	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);

		String filo, reino, classe, genero;

		System.out.print("\t\t Taxonomia - Programa\n");

		System.out.print("\n Adicione o filo: ");
		filo = leia.next().toLowerCase();
		System.out.print("\n");

		System.out.print("\n Adicione o reino: ");
		reino = leia.next().toLowerCase();
		System.out.print("\n");

		System.out.print("\n Adicione o classe: ");
		classe = leia.next().toLowerCase();
		System.out.print("\n");
		

		leia.close();

		if (filo.equals("vertebrado")) {

			if (reino == "ave" && classe == "carnívoro") {

				System.out.println("Águia");

			} else if (reino == "ave" && classe == "onívoro") {

				System.out.println("Pomba");

			}

			if (reino == "mamífero" && classe == "herbívoro") {

				System.out.println("Vaca");

			} else if (reino == "mamífero" && classe == "onívoro") {
				System.out.println("homem");
			}else {
				System.out.println("Tem alguma coisa errada");
			}

		
		
		} else if (filo == "invertebrado") {
			
			if (reino == "inseto" && classe == "herbívoro") {

				System.out.println("Largata");

			} else if (reino == "inseto" && classe == "hematófago") {

				System.out.println("Pulga");

			}

			if (reino == "analídeo" && classe == "hematófago") {

				System.out.println("Sanguessuga");

			} else if (reino == "analídeo" && classe == "onívoro") {
				System.out.println("Minhoca");
			}
			

		} else {
			System.out.println("Já errou o filo amigo, volta e lembra só pode ser invertebrado ou vertebrado");
		}

	}
}