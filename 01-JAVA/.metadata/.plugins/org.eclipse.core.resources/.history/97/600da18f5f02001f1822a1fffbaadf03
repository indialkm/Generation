package vetorematrizes;

import java.util.Random;
import java.util.Scanner;

public class vetor {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.println("\t\tJogo de adivinhação, qual número têm no vetor: \n\n");
		
		Random numero = new Random();
		int numeros[] = new int[10];
		int adivinha = 0;
		Scanner leia = new Scanner(System.in);
		
		for(int i = 0; i < 10; i++)
		{
			numeros[i] = numero.nextInt();
			
		}
		
		System.out.print("Qual número você acha que têm no vetor de 10 posições? \n Digite:");
		adivinha = leia.nextInt();
		
		for(int i = 0; i < 10; i++)
		{
			if(adivinha == numeros[i]) {
			 System.out.printf("Parabéns, você é um ícone, o número %d, está na posição %d ", adivinha, i);
			}
		}
		
		System.out.println("Tudo bem se você não conseguiu, nosso vetor era: \n");
		
		for(int i = 0; i < 10; i++)
		{
			
			 System.out.printf("%d | ",numeros[i]);
		}
		

	}

}
