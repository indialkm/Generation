package vetorematrizes;

import java.util.Scanner;

public class jogoDaVelha {

	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);
		String jogadorX;
		String jogadorO;
		String tabuleiro[][] = new String[3][3];
		int escolha = 1;

		
		printJogo(tabuleiro);
		do {
			
			
		} while (escolha != 0);

	}

	public static void printJogo(String[][] array) {
		for (int indice = 0; indice < array.length; indice++) {
			for (int j = 0; j < array[indice].length; j++) {
				if(array[indice][j] != null) {
				System.out.printf("%d|", array[indice][j]);
				}else {
					System.out.printf(" |");	
				}
			}
			System.out.println("");
		}
	}

	public static void jogadorX(String[][] array) {
		Scanner leia = new Scanner(System.in);
		int linha;
		int coluna;

		System.out.print("Ol치 jogador, qual linha?: \n");
		linha = leia.nextInt();

		System.out.print("Ol치 jogador, qual coluna?: \n");
		coluna = leia.nextInt();

		array[linha][coluna] = "X";

	}

	public static void jogadorO(String[][] array) {
		Scanner leia = new Scanner(System.in);
		int linha;
		int coluna;

		System.out.print("Ol치 jogador, qual linha?: \n");
		linha = leia.nextInt();

		System.out.print("Ol치 jogador, qual coluna?: \n");
		coluna = leia.nextInt();

		array[linha][coluna] = "O";

	}

	public static int verificacao(String[][] array) 
	{
		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array[i].length; j++) {
				if (array[i][j] == null) {
					return 0;
				}
			}
		}
		return 1;
	}
	
	public static int verificarHorizontal(String[][] array)
	{
		for(int i =  0; i < array.length; i++)
		{
			for(int j = 0; j < array[i].length; j++)
			{
				
			}
		}
		
		return 0;
		
	}
	
	
	public static int verificarVertical(String[][] array)
	{
		for(int i =  0; i < array.length; i++)
		{
			for(int j = 0; j < array[i].length; j++)
			{
				
			}
		}
		
		return 0;
		
	}
	
	public static int verificarDiagonal(String[][] array)
	{
		for(int i =  0; i < array.length; i++)
		{
			for(int j = 0; j < array[i].length; j++)
			{
				
			}
		}
		
		return 0;
		
	}

}
